{
  "name": "easy-step",
  "description": "Handle steps as you want to",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 10 --branches 10 --functions 10 --lines 10",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/.bin/codecov",
    "test-watch": "npm t -- -w",
    "test": "mocha src/index.test.js --compilers js:babel-register",
    "cover": "nyc npm t",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djleonskennedy/stepper.git"
  },
  "keywords": [
    "step",
    "animation",
    "delay",
    "stepcallback",
    "events"
  ],
  "author": "'Alexsey Zhyravlev, Yuriy Yakovenko <'djleonskennedy@gmail.com'> (http://exbinet.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/djleonskennedy/stepper/issues"
  },
  "homepage": "https://github.com/djleonskennedy/stepper#readme",
  "dependencies": {
    "array-from": "2.1.1"
  },
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.14.0",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "json-loader": "0.5.4",
    "mocha": "3.0.2",
    "nyc": "8.1.0",
    "rimraf": "2.5.4",
    "semantic-release": "^4.3.5",
    "webpack": "1.13.2"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
